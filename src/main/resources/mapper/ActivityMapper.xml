<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dlpower.crm.mapper.ActivityMapper">

    <!-- 抽取的字段列表 -->
    <sql id="base_column">
        id,owner,name,
        startDate,endDate,cost,
        description,createTime,createBy,
        editTime,editBy
    </sql>

    <!-- 根据条件对活动类别模糊查询 -->
    <select id="searchByMap" resultType="activity">
        select <include refid="base_column"/> from tbl_activity
        <where>
            <if test="name != null and name != '' ">
                and name like concat('%',#{name},'%')
            </if>
            <if test="owner != null and owner != '' ">
                and owner like concat('%',#{owner},'%')
            </if>
            <if test="startDate != null and startDate != '' ">
                and startDate = #{startDate}
            </if>
            <if test="endDate != null and endDate != '' ">
                and endDate = #{endDate}
            </if>
        </where>
    </select>
</mapper>
